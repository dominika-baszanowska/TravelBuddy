    <style>
        body {
          margin: 0;
          padding: 0;
        }
    
        .faded-image {
          position: relative;
          width: 100%;
          height: 100vh;
          background-image: url('res/travelBackground.jpg');
          background-position: center;
          background-size: cover;
          opacity: 0.7;
        }
    
        .faded-image::before {
          content: "";
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background-color: #000;
          opacity: 0.4;
        }
    
        .faded-image-text {
          position: absolute;
          top: 50%;
          left: 50%;
          transform: translate(-50%, -50%);
          color: white;
          font-size: 24px;
          text-align: center;
        }
      </style>
    </head>
  <body>
